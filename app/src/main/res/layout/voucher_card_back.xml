<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_coupon"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="5dp"
    android:stateListAnimator="@drawable/lift_on_touch"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    app:ignore="NamespaceTypo"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/voucher_icon_back"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="6dip" />

        <TextView
            android:id="@+id/placeholder_back"
            android:layout_width="fill_parent"
            android:layout_height="6dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/voucher_icon_back"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/voucher_description_back"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/placeholder_back"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/voucher_icon_back"
            android:ellipsize="marquee"

            android:textSize="12sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>