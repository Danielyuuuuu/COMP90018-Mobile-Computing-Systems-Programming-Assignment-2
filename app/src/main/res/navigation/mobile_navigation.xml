<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.dansdistractor.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <activity
        android:id="@+id/nav_profile"
        android:name="com.example.dansdistractor.ProfileActivity"
        android:label="@string/menu_voucher"
        tools:layout="@layout/activity_profile" />

    <activity
        android:id="@+id/nav_voucher"
        android:name="com.example.dansdistractor.VoucherActivity"
        android:label="@string/menu_voucher"
        tools:layout="@layout/activity_voucher" />

    <activity
        android:id="@+id/nav_fitness"
        android:name="com.example.dansdistractor.HistoryActivity"
        android:label="@string/menu_fitness"
        tools:layout="@layout/activity_history" />

    <activity
        android:id="@+id/nav_summary"
        android:name="com.example.dansdistractor.Summary"
        android:label="@string/menu_summary"
        tools:layout="@layout/activity_summary" />
</navigation>